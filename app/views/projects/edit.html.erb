<%= turbo_frame_tag :modal do %>
  <div class="relative">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75"></div>
    <div class="fixed inset-0 bg-gray-800 mt-8 p-8 size-96 mx-auto">
      <%= form_with model: @project do |form| %>
        <div class="flex flex-col items-center">
          <div class="mb-4">
            <%= form.label :project_name, class: "text-gray-300" %>
            <%= form.text_field :name, class: "rounded-md mb-4 p-3 bg-gray-900 border-none text-gray-200 w-full", placeholder: "Add Project Name" %>
          </div>
          <div class="mb-4">
            <%= form.label :assign_to_team, class: "text-gray-300" %>
            <%= form.collection_select :team_id, Team.all, :id, :name, class: "rounded-md mb-4 p-3 bg-gray-900 border-none text-gray-200 w-full", placeholder: "Add Project Name" %>
          </div>
          <%= form.submit "Update", class: "bg-blue-500 p-3 cursor-pointer rounded-md hover:bg-blue-600 w-full", data: {turbo_frame: "_top"} %>
          <div class="absolute right-0 top-0">
            <%= button_to project_path do %>
              <%= inline_svg_tag("close.svg", class: "text-gray-500 hover:text-gray-200" ) %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
