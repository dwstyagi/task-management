<div data-controller="close" data-close-timeout-value="3000">
    <% if notice.present? %>
        <p data-close-target="notice"
            class="bg-green-600 text-gray-200 h-8 font-semibold rounded-md px-4 absolute bottom-6 right-6 z-10 flex items-center justify-center">
            <%= notice %>
            <span data-action="click->close#dismiss" class="cursor-pointer">
                <%= inline_svg_tag("close.svg") %>
            </span>
        </p>
    <% elsif alert.present? %>
        <p data-close-target="alert" class="bg-red-600 text-gray-200 h-8 font-semibold rounded-md px-4 absolute bottom-6 right-6 z-10 flex items-center justify-center">
            <%= alert %>
            <span data-action="click->close#dismiss" class="cursor-pointer">
                <%= inline_svg_tag("close.svg") %>
            </span>
        </p>
    <% end %>
</div>