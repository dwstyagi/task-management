<div class="w-96 p-6 mx-auto">
  <div class="flex justify-between p-2">
    <h1 class="font-bold text-gray-300">Notifications</h1>
    <div class="text-blue-500">
      <%= link_to "Mark as all read", read_notifications_path %>
    </div>
  </div>

  <div class="p-4 rounded-lg bg-gray-400 max-h-96 overflow-y-scroll">
    <% @notifications.unread.each do |notification| %>
      <li class="mb-6 border-b border-gray-900">
        <%= link_to notification.message %>
      </li>
    <% end %>
    <% if @notifications.unread.empty? %>
      <div class="p-4">You have no new notifications</div>
    <% end %>
  </div>
</div>