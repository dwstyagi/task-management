<div class="h-screen bg-gray-200 flex items-center justify-center">
  <div class="md:max-w-md w-full bg-gray-100 shadow-lg p-8 rounded-lg">
    <h2 class="font-bold md-6 text-gray-800 text-center text-2xl">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data:{turbo: false}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <% resource.build_owned_organisation if resource.owned_organisation.nil? %>
      <%= f.fields_for :owned_organisation do |org| %>
        <div class="mb-4">
          <%= org.label :organisation_subdomain, class: "block mb-2 text-gray-700"  %>
          <%= org.text_field :subdomain, autofocus: true, class: "w-full px-3 py-2 border rounded-lg" %>
        </div>
        <div class="mb-4">
          <%= org.label :organisation_name, class: "block mb-2 text-gray-700"  %>
          <%= org.text_field :name, autofocus: true, class: "w-full px-3 py-2 border rounded-lg" %>
        </div>
      <% end %>
      <div class="mb-4">
        <p><%= f.label :full_name, class: "block mb-2 text-gray-700" %></p>
        <p><%= f.text_field :full_name, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg" %></p>
      </div>
      <div class="mb-4">
        <p><%= f.label :email, class: "block mb-2 text-gray-700" %></p>
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg" %></p>
      </div>
      <div class="mb-4">
        <p><%= f.label :password %></p>
        <% if @minimum_password_length %>
          <p><em>(<%= @minimum_password_length %> characters minimum)</em></p>
        <% end %>
        <p><%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg" %></p>
      </div>
      <div class="mb-4">
        <p><%= f.label :password_confirmation %></p>
        <p><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg" %></p>
      </div>
      <div class="flex justify-center mb-4">
        <%= f.submit "Sign up", class: "cursor-pointer w-full bg-orange-600 px-4 py-3  text-white font-semibold rounded-lg shadow-md hover:bg-orange-700" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
